<h1>All Tasks</h1>

<p><%= link_to "Create new task", new_task_path %></p>

<% @tasks.each do |task| %>
  <h2><%= task.id %>. <%= task.name %></h2>
  <p><%= link_to "More details", task_path(task) %></p>
  <p><%= link_to "Edit task", edit_task_path(task) %></p>
  <p><%= link_to "Remove task", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></p>
<% end %>


